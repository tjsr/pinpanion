{
  "compilerOptions": {
    "target": "es2020",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./src",
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./ts-src"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
